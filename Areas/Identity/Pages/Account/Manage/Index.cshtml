@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Dni" class="form-control" autocomplete="dni" aria-required="true" />
                <label asp-for="Input.Dni"></label>
                <span asp-validation-for="Input.Dni" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Nombre" class="form-control" autocomplete="nombre" aria-required="true" />
                <label asp-for="Input.Nombre"></label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Apellido" class="form-control" autocomplete="apellido" aria-required="true" />
                <label asp-for="Input.Apellido"></label>
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FechaNacimiento" class="form-control" autocomplete="fechanacimiento" aria-required="true" />
                <label asp-for="Input.FechaNacimiento"></label>
                <span asp-validation-for="Input.FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Direccion" class="form-control" autocomplete="direccion" aria-required="true" />
                <label asp-for="Input.Direccion"></label>
                <span asp-validation-for="Input.Direccion" class="text-danger"></span>
            </div>            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div class="m-1">
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Guardar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
